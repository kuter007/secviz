<Window x:Class="SecVizAdminApp.FilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FilterWindow" Height="316" Width="540">
    <Grid Name="mainGrid">
        <Button Content="Search" Height="25" HorizontalAlignment="Left" Margin="113,226,0,0" Name="searchButton" 
                VerticalAlignment="Top" Width="107" Click="searchButton_Click" />
        <Button Content="Cancel" Height="25" HorizontalAlignment="Left" Margin="305,226,0,0" Name="cancelButton"
                VerticalAlignment="Top" Width="107" Click="cancelButton_Click" />
        <Label Content="Enter value of corresponding property to filter:" Height="28" HorizontalAlignment="Left" Margin="23,12,0,0" Name="label1" VerticalAlignment="Top" Width="302" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="368,17,0,0" Name="optionCombox"
                  VerticalAlignment="Top" Width="120" SelectedIndex="0">
            <ComboBoxItem Name="AND"/>
            <ComboBoxItem Name="OR"/>
        </ComboBox>
    </Grid>
</Window>
