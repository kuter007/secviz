<Window x:Class="View.KnowledgeBase"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KnowledgeBase" Height="300" Width="612">
    <Grid>
        <Button Content="Add Knowledge" Margin="0,0,488,238" Height="23" Name="btLoadDataBrowse" Width="102" />
        <TabControl Margin="0,29,0,0">
            <TabItem Header="Predicate" Name="tabPredicate" FontWeight="Bold" FontSize="13">
                <DataGrid AutoGenerateColumns="True" Height="205" HorizontalAlignment="Left" Name="PredicateGrid" VerticalAlignment="Top" Width="583" Canvas.Top="55" />
            </TabItem>
            <TabItem Header="Implication" Name="tabImplication" FontWeight="Bold" FontSize="13">
                <DataGrid AutoGenerateColumns="True" Height="205" HorizontalAlignment="Left" Name="ImplicationGrid" VerticalAlignment="Top" Width="582" Canvas.Top="55" />
            </TabItem>
            <TabItem Header="HyperAlertType" Name="tabHyperAlertType" FontWeight="Bold" FontSize="13">
                <DataGrid AutoGenerateColumns="True" Height="205" HorizontalAlignment="Left" Name="HyperAlertTypeGrid" VerticalAlignment="Top" Width="585" Canvas.Top="55" />
            </TabItem>
        </TabControl>

    </Grid>
</Window>
